<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="General">
        <com.vibin.billy.ReorderedListPreference
            android:summary="Choose and reorder genres"
            android:title="Genres" />

        <com.vibin.billy.CustomListPreference
            android:defaultValue="1"
            android:entries="@array/albumArtQuality"
            android:entryValues="@array/album_art_values"
            android:key="albumArtQuality"
            android:summary="Higher quality takes up more cache"
            android:title="@string/album_art_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Interface">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="compactCards"
            android:summary="Make the cards in the list smaller"
            android:title="Compact cards" />
    </PreferenceCategory>

    <PreferenceCategory android:title="About">
        <Preference
            android:key="changelog"
            android:title="Changelog" />
        <Preference
            android:key="rate"
            android:title="Rate on Play Store" />
        <Preference
            android:key="licenses"
            android:title="Licenses" />
    </PreferenceCategory>
</PreferenceScreen>