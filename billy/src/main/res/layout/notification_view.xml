<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/artwork"
        android:layout_width="120dp"
        android:layout_height="120dp"
        tools:src="@android:drawable/ic_delete" />

    <LinearLayout
        android:layout_width="155dp"
        android:layout_height="fill_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent.Title"
            android:textColor="#fff"
            tools:text="Get Lucky" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:focusable="false"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="-35dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:textColor="#ffafafaf"
                android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent"
                tools:text="Random Access Memories" />

            <TextView
                android:id="@+id/artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#ffafafaf"
                android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent"
                tools:text="Daft Punk" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notifDivider"
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:background="@android:color/darker_gray"
        android:clickable="false"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/notification_dismiss" />

        <ImageView
            android:id="@+id/control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@null" />

    </LinearLayout>
</LinearLayout>