<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Billy" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Billy</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:homeAsUpIndicator">@drawable/up</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_highlight</item>
    </style>

    <style name="Theme.Billy.TransparentActionBar" parent="Theme.Billy">
        <item name ="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Billy</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--TODO finish styling Action bar text and copy to /values-->
    <style name="ActionBar.Solid.Billy" parent="@style/ActionBar.Billy.TextAppearance">
        <item name="android:background">@drawable/ab_solid_billy</item>
    </style>

    <style name="ActionBar.Transparent.Billy" parent="@style/ActionBar.Billy.TextAppearance">
        <item name="android:background">@drawable/ab_transparent_billy</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="ActionBar.Billy.TextAppearance" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:alpha">1</item>
    </style>
</resources>